<header class="primary-header container">
  <a href="/"><img src="/img/EatEasy.svg" class="logo" alt="EatEasy Logo" /></a>
  <nav class="primary-navigation">
    <ul role="list" class="nav-list">
      <li><a href="/">Home</a></li>
      <li><a href="#">Popular</a></li>
      <li><a href="/menu">Menu</a></li>
    </ul>
  </nav>
  <div class="icons">
    <a href="#"><i class="fa-solid fa-magnifying-glass icon icon-hover"></i></a>
    <div class="profile__icon">
      <span id="profile" class="profile"
        ><i class="fa-solid fa-user icon icon-hover"></i
      ></span>
      <div class="profile__menu">
        <ul role="list" class="menu__list">
          <li><a href="#"><%= user.name %></a></li>
          <li><a href="/user/logout">Logout</a></li>
        </ul>
      </div>
    </div>
    <a href="/cart" class="cart"
      ><i class="fa-solid fa-cart-shopping icon icon-hover"></i>
      <% if(cart) {%>
        <span class="cart__count" id="cartCount"> <%= cart.items.length %> </span>
      <% }else{ %>
        <span class="cart__count" id="cartCount">0</span>
        <% } %>
    </a>
  </div>
</header>
<main>
  <section class="menu container">
    <h2 class="section__title">Menu</h2>
    <div class="menu__grid">
      <% items.forEach((item)=>{ %>
      <div class="menu__item menu__item-shadow">
        <div class="item__header">
          <img
            src="<%= item.image %>"
            class="item__image"
            alt=" <%= item.name %> "
          />
        </div>
        <div class="item__body">
          <div class="info__wrapper">
            <h4 class="item__name"><%= item.name %></h4>
            <p class="item__price">&#8377;<%= item.price %></p>
            <p class="item__unit">Per <% if(item.unit=="Plate" || item.unit=="Piece") {%> 
                <%= item.unit %>
              <% } else{%>
                <%= item.serve %> <%= item.unit %>
                <% } %>
            </p>
          </div>
          <div class="add__wrapper">
            <input type="hidden" id="itemId" value="<%= item.itemId %>"> 
            <button class="item__add">+</button>
        </div>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</main>

<!-- Scrips -->
<script src="/js/menu.js"></script>
